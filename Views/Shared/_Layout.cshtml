<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
      
        <footer class="row align-items-center bg-dark p-4 text-white">
            <div class="col-6">
                <span>&copy; @DateTime.Now.Year - My ASP.NET Application</span>
            </div>
            <div class="col-6">

                <img src="~/caroeta de imagenes/images/icons/icon-pinterest.jpg" class="float-right ml-3" />

                <img src="~/caroeta de imagenes/images/icons/icon-googleplus.jpg" class="float-right ml-3" />

                <img src="~/caroeta de imagenes/images/icons/icon-facebook.jpg" class="float-right ml-3" />

                <img src="~/caroeta de imagenes/images/icons/icon-twitter.jpg" class="float-right" />

            </div>
        </footer>
    </div>
     
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
